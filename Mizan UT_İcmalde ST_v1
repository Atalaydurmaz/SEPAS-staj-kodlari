---------�CMALDE UT MUHASEBE ST KAYITLAR
select 
t.ERDAT,
t.VKONT,
t.OPBEL,
t.KOFIZ,
t.ZZSOZLESMETUR_TEXT,
t.ICMAL_DONEMI,
t.BUDAT,
sum (t.T0_TUTAR+ISNULL(t.T0_TUTAR_K2,0)+t.EKTUK_TUTARI+ISNULL(t.EKTUK_TUTARI_K2,0)+t.FIYAT_FARKI+t.YEKDEM_FYT_FARKI) as 'Aktif Tutar'
from sepasTM1DB..ZBI_T_FATURA_RAP t
where 
t.ICMAL_DONEMI in ('2025/06')
--t.ICMAL_DONEMI between ('2022/07') and ('2022/09')
 and  t.ZZSOZLESMETUR in ('0001','0002','0003','0004')
 and t.KOFIZ in ('A2','A3','M2','M3','S2','S3','T2','T3','W2','W3','')
 group by
t.VKONT,t.ERDAT,
t.OPBEL,t.KOFIZ,t.ZZSOZLESMETUR_TEXT,
t.ICMAL_DONEMI,
t.BUDAT
order by
t.VKONT

---------�CMALDE ST MUHASEBE UT KAYITLAR
select 
t.ERDAT,
t.VKONT,
t.OPBEL,
t.KOFIZ,
t.NAME,
t.ZZSOZLESMETUR_TEXT,
t.ICMAL_DONEMI,
t.BUDAT,
sum (t.T0_TUTAR+ISNULL(t.T0_TUTAR_K2,0)+t.EKTUK_TUTARI+ISNULL(t.EKTUK_TUTARI_K2,0)+t.FIYAT_FARKI+t.YEKDEM_FYT_FARKI) as 'Aktif Tutar'
from sepasTM1DB..ZBI_T_FATURA_RAP t
where 
t.ICMAL_DONEMI in ('2025/06')
--t.ICMAL_DONEMI between ('2022/07') and ('2022/09')
 and t.ZZSOZLESMETUR in ('0005','0006','0007','0008','0009','0010')
 and t.KOFIZ in ('A1','A4','A5','M1','M4','M5','S1','S4','S5','T1','T4','T5','W1','W4','W5','')
 group by
t.VKONT,t.ERDAT,
t.OPBEL,t.KOFIZ,t.ZZSOZLESMETUR_TEXT,
t.ICMAL_DONEMI,
t.BUDAT,
T.NAME
order by
t.VKONT

--ST L�STES�
select 
T.NAME,
T.ANLAGE,
t.VKONT,
t.OPBEL,
t.KOFIZ,
t.ZZSOZLESMETUR_TEXT,
t.ICMAL_DONEMI,
t.BUDAT,
sum (t.T0_TUTAR+ISNULL(t.T0_TUTAR_K2,0)+t.EKTUK_TUTARI+ISNULL(t.EKTUK_TUTARI_K2,0)+t.FIYAT_FARKI+t.YEKDEM_FYT_FARKI+t.T0_TK_BEDELI+t.T1_TK_BEDELI+t.T2_TK_BEDELI+t.T3_TK_BEDELI) as 'Aktif Tutar'
from sepasTM1DB..ZBI_T_FATURA_RAP t
where 
t.ICMAL_DONEMI between ('2025/02') and ('2025/02')
and t.ZZSOZLESMETUR in ('0005','0006','0007','0008','0009','0010')
 --and t.KOFIZ in ('A2','A3','M2','M3','S2','S3','T2','T3','W2','W3')
 
 group by
 T.NAME,
 T.ANLAGE,
t.VKONT,
t.OPBEL,t.KOFIZ,t.ZZSOZLESMETUR_TEXT,
t.ICMAL_DONEMI,
t.BUDAT
order by
t.VKONT

