select 
--t.VKONT,
--t.OPBEL,
t.KOFIZ,
t.ZZSOZLESMETUR_TEXT,
--t.ICMAL_DONEMI,
--t.BUDAT,
sum (t.T0_TUTAR+ISNULL(t.T0_TUTAR_K2,0)+t.EKTUK_TUTARI+ISNULL(t.EKTUK_TUTARI_K2,0)+t.FIYAT_FARKI+t.YEKDEM_FYT_FARKI) as 'Aktif Tutar'
from sepasTM1DB..ZBI_T_FATURA_RAP t
where 
t.ICMAL_DONEMI in ('2025/02')
 group by
t.KOFIZ,t.ZZSOZLESMETUR_TEXT
order by
t.ZZSOZLESMETUR_TEXT
